pipeline {
    agent {
        dockerfile=true
        }
    }
    environment {
        HOME = '.'
    }
     stages {
     stage('Lint') {
            steps {
                sh 'npm run lint'
            }
        }    
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                echo 'Test stage should be runing here!'
            }
        }
        stage('Deliver') {
            steps {
                sh 'node src/app.js'
                input message: 'Finished using the web site? (Click "Proceed" to continue)'
                sh './scripts/kill.sh'
            }
        }
    }
}

