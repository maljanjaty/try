pipeline {
    agent any
    environment {
        HOME = '.'
    }
    stages {
        stage('Lint') {
            steps {
                sh 'npm run lint'
            }
        }    
        stage('Verify') {
            steps {
                sh '''
                docker version
                docker info
                docker compose version
                curl --version
                '''
            }
        }
        stage('Start container'){
            steps{
                sh 'docker compose up -d'
                sh 'docker compose ps'
            }
        }
    }
}

